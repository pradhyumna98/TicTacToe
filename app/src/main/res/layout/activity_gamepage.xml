<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.pradhyumna.tictactoe.gamepage"
    android:orientation="vertical"
    android:weightSum="4"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b1"
            android:fontFamily="cursive"
            android:layout_weight="1"
            android:textSize="70dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b2"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:textSize="70dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b3"
            android:fontFamily="cursive"
            android:layout_weight="1"
            android:textSize="70dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b4"
            android:fontFamily="cursive"
            android:layout_weight="1"
            android:textSize="70dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b5"
            android:fontFamily="cursive"
            android:layout_weight="1"
            android:textSize="70dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b6"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:textSize="70dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b7"
            android:fontFamily="cursive"
            android:layout_weight="1"
            android:textSize="70dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b8"
            android:fontFamily="cursive"
            android:layout_weight="1"
            android:textSize="70dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/b9"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:textSize="70dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIT"
            android:layout_weight="1"
            android:fontFamily="cursive"
            android:textSize="40dp"
            android:layout_marginTop="30dp"
            android:id="@+id/xb"/>

    </LinearLayout>

</LinearLayout>
